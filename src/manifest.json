{
  "manifest_version": 3,
  "name": "Into the Dataverse",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["https://*.dynamics.com/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.dynamics.com/*"],
      "js": ["content.js"]
    }
  ]
}